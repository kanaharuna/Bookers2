<h1>Book detail</h1>
<%= link_to user_path(@book_data.user.id) do %>
  <%= attachment_image_tag @book_data.user,:profile_image,format: 'jpeg',fallback: "no_image.jpg",size:'40x40' %>
  <%= @book_data.user.name %>
<% end %>

<%= link_to book_path(@book_data.id) do%>
  <%= @book.title %>
<% end %>

<%= @book_data.body %>

<% if @book_data.user == current_user %>
  <%= link_to 'Edit',edit_book_path %>
  <%= link_to 'Destroy',book_path(@book_data.id),method: :delete,"data-confirm"=>"本当に消しますか？" %>
<% end %>


<%= render 'users/user_info',user: @book_data.user %>
<%= render'books/new',book: @book %>