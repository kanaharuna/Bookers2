<h1>User info</h1>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= @user.errors.count %> errors prohibited this obj from being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model:@user,local:true do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name,id:"inputName" %>
  <label for="inputImage">Image</label>
  <%= f.attachment_field :profile_image,id:"inputImage" %>
  <label for="inputIntroduction"></label>
  <%= f.text_area :introduction,id:"inputIntroduction" %>
  <%= f.submit 'Update user' %>
<% end %>