<h1>Users</h1>
<table>
    <thead>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user,:profile_image,format:'jpeg',fallback: "no_image.jpg", size:'40x40' %></td>
          <td><%= user.name %></td>
          <td><%= link_to 'Show',user_path(user.id) %></td>
      <% end %>
        </tr>
    </tbody>
</table>

<%= render 'users/user_info',user: current_user %>
<%= render 'books/new',book: @new_book %>