<h1>my page</h1>

<h1>Books</h1>
<table>
    <thead>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
      <% end %>
        </tr>
    </tbody>
</table>

<h1>New book</h1>
<%= form_with model: @book,local:true do |f|%>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body%>
  <%= f.submit 'Create book' %>
<% end %>